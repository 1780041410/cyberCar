<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:it="http://schemas.android.com/apk/it.neokree.materialtabs.MaterialTabHost"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fat246.cybercar.fragments.RegisterBasicInfoFragment">

    <it.neokree.materialtabs.MaterialTabHost
        android:id="@+id/fragment_register_basic_info_materialtabhost"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        it:primaryColor="#009688"
        it:accentColor="#ffc400"
        it:hasIcons="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_register_basic_info_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>
