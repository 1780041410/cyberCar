<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activities.regulations.CityListActivity">

    <include
        android:id="@+id/activity_city_list_toolbar"
        layout="@layout/my_toolbar" />

    <TextView
        android:id="@+id/activity_city_list_textview_list_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_city_list_textview_list_tip"
        android:gravity="center"
        android:textColor="@color/csy_label"
        android:textSize="13.0sp" />

    <ListView
        android:id="@+id/activity_city_list_listview_citis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorPrimary"
        android:dividerHeight="1px" />


</LinearLayout>
